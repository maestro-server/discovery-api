    {
      "icon": "icon-openstack",
      "label": "OpenStack",
      "dc": "Openstack",
      "authClass": "OpenStack",
      "method": [
        {
          "label": "Api (Horizon)"
        }
      ],
      "template": {
        "intro": "Hit: All information may be found in Access & Security page inside of GUI OpenStack",
        "dc": [
          true,
          true
        ],
        "conn": [
          {
            "comp": "bs-input",
